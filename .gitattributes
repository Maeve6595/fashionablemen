*.cjs  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.css  text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.txt  text eol=lf

# Binary files (no normalization)
*.png binary
